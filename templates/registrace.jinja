{% extends '__main.jinja' %}

{% block content %}
<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <img src="{{ url_for('static', filename='images/logo.jpg') }}" alt="Autoservis Logo" class="auth-logo">
            <h2>Registrace</h2>
        </div>
        <form class="auth-form" method="POST" action="/registrace">
            <div class="form-group">
                <label for="jmeno">Jméno</label>
                <input type="text" id="jmeno" name="jmeno" required placeholder="Vaše jméno">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required placeholder="vas@email.cz">
            </div>
            <div class="form-group">
                <label for="telefon">Telefon</label>
                <input type="tel" id="telefon" name="telefon" required placeholder="+420 123 456 789">
            </div>
            <div class="form-group">
                <label for="heslo">Heslo</label>
                <input type="password" id="heslo" name="heslo" required placeholder="Zvolte si heslo">
            </div>
            <button type="submit" class="btn btn-primary btn-full">Zaregistrovat se</button>
            <div class="auth-footer">
                <p>Již máte účet? <a href="/">Přihlaste se</a></p>
            </div>
        </form>
    </div>
</div>
{% endblock %}