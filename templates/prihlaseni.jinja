{% extends '__main.jinja' %}

{% block content %}
<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <img src="{{ url_for('static', filename='images/logo.jpg') }}" alt="Autoservis Logo" class="auth-logo">
            <h2>Přihlášení</h2>
        </div>
        <form class="auth-form" method="POST" action="/">
            <div class="form-group">
                <label for="jmeno">Jméno</label>
                <input type="text" id="jmeno" name="jmeno" required placeholder="Zadejte své jméno">
            </div>
            <div class="form-group">
                <label for="heslo">Heslo</label>
                <input type="password" id="heslo" name="heslo" required placeholder="Zadejte své heslo">
            </div>
            <button type="submit" class="btn btn-primary btn-full">Přihlásit se</button>
            <div class="auth-footer">
                <p>Nemáte účet? <a href="registrace">Zaregistrujte se</a></p>
            </div>
        </form>
    </div>
</div>
{% endblock %}
